<!DOCTYPE html>
<html>
<head>
  <title>Hired</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Lato:300,400,300italic,400italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'> 
</head>
<body>
 <!-- ******HEADER****** --> 
  <header id="header" class="header">  
    <div class="container">  
      <nav id="main-nav" class="main-nav navbar-left" role="navigation">
        <div class="navbar-header">
          <div class="navbar-collapse collapse" id="navbar-collapse">
             <ul class="nav navbar-nav">
                <li class="active nav-item sr-only" <%= link_to "Home", root_path, method: :get %></li>
                <li class="nav-item"><a class="scrollto"<%= link_to "Home", root_path,method: :get %></a></li>
                <li class="active nav-item sr-only" <%= link_to "Jobs", jobs_path, method: :get %></li>
                <li class="nav-item"><a class="scrollto"<%= link_to "Jobs", jobs_path,method: :get %></a></li>
                <li class="active nav-item sr-only" <%= link_to "Manage Applications", applications_path, method: :get %></li>
                <li class="nav-item"><a class="scrollto"<%= link_to "Manage Applications", applications_path,method: :get %></a></li>
              </ul>
            </div>
          </div>
        </nav>
        <nav id="main-nav" class="main-nav navbar-right" role="navigation">
          <div class="navbar-header">
            <div class="navbar-collapse collapse" id="navbar-collapse">
              <ul class="nav navbar-nav">
                <% if current_admin %>
                <li class="nav-item greeting inline">
                   Hello Admin! </li>
                <li class="nav-item inline"><%= link_to "Sign out", destroy_admin_session_path, method: :delete %>
                </li>
                <% end %>
              </ul>
            </div><!--//navabr-collapse-->
          </div>
        </nav>
      </div>
  </header>
<div class="page">
  <div class="col-md-12">
       <% if flash[:notice] %>
         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:error] %>
         <div class="alert alert-danger">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:error] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
       <% end %>
     </div>
<%= yield %>
</div>
</body>
</html>
