<%=form_for [job,application] do |f| %>
  <p><b>Current Status:</b> <%=application.status%></p>
  <div class="form-group">
      <%= f.label "Update Status" %>
      <%= f.select(:status,["New Application","Under Review","Rejected","Hired"])%>
  </div>
  <div class="form-group">
      <%= f.label "Admin Notes" %>
      <%= f.text_area :notes, rows: 8, class: 'form-control', placeholder: "Enter job description" %>
  </div>
  <div class="form-group">
    <%= f.submit "Update Admin Section", class: 'btn btn-success' %>
  </div>
<% end %>