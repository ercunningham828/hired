<div class="row">
  <div class="col-md-12">
      <a><%= link_to "Back to all Jobs",jobs_path, class: 'btn btn-cta-secondary btn-small' %></a>
   </div>
  <div class="col-md-12"><h1><%=@job.title%></h1></div>
  <div class="col-md-8">
    <p><%=@job.description%></p>
    </br>
    <h3>Apply for the Position</h3>
    <%= render partial: 'applications/form', locals: {job:@job, application:@application}%>
  </div>
  <div class="col-md-4">
   <%= link_to "Edit Listing", edit_job_path, class: 'btn btn-success' %>
    <%= link_to "Delete Listing", @job, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this listing?' } %> 
  </div>
</div>